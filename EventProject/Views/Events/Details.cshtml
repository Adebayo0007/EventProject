@model EventProject.Models.Event
@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>

<p class="text-muted">
    @Model.EventDateTime.ToString("dddd, dd MMMM yyyy – HH:mm")
</p>

<p><strong>Location:</strong> @Model.Location</p>
<p><strong>Capacity:</strong> @Model.Capacity</p>

<hr />

<div class="mb-4">
    @Html.Raw(Model.Summary)
</div>

<hr />

@if (User.Identity.IsAuthenticated)
{
    <h3>Book Your Place</h3>
    @await Html.PartialAsync("_BookingForm", Model.Id)
}
else
{
    <div class="alert alert-info">
        Please log in to book this event.
    </div>
}
